{
    "name": "timdiels1/ui_patterns_development",
    "description": "A minimal project build for Drupal UI Patterns module development.",
    "license": "GPL-2.0-or-later",
    "type": "project",
    "homepage": "https://github.com/timdiels1/ui_patterns_development",
    "require": {
        "composer/installers": "^2.0",
        "drupal/admin_toolbar": "^3.4",
        "drupal/core-composer-scaffold": "^10.1",
        "drupal/core-recommended": "^10.1",
        "drush/drush": "^12.4"
    },
    "require-dev": {
        "behat/mink": "^1.10",
        "behat/mink-selenium2-driver": "^1.6",
        "drupal/coder": "^8.3",
        "drupal/config_inspector": "^2.1",
        "ergebnis/composer-normalize": "^2.39",
        "friends-of-behat/mink-browserkit-driver": "^1.6",
        "mglaman/drupal-check": "^1.4",
        "mikey179/vfsstream": "^1.6",
        "palantirnet/drupal-rector": "^0.15.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpmd/phpmd": "^2.13",
        "phpspec/prophecy": "^1.17",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/phpunit-bridge": "^6.3"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        }
    }
}
